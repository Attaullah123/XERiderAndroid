<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:id="@+id/ride_start_popup"
    tools:context=".MainActivity">

    <!--bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15sp"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:elevation="6dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:background="@color/colorPrimary"
                android:id="@+id/lay0"
                android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"

                android:weightSum="1">


                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="20sp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:src="@drawable/logo_login"
                    />
                <com.sygn.xeapp.customview.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="Phase 4, Bahria town lahore"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15sp"
                    android:layout_marginLeft="15sp"
                    android:orientation="horizontal">


                <com.sygn.xeapp.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:gravity="end"

                        android:text="Change"/>
            </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginTop="0sp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_below="@+id/lay0"
                    android:id="@+id/lay1"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:layout_gravity="center"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cardview_image"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pro_img" />

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/cardview_list_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_toRightOf="@+id/cardview_image"
                            android:paddingBottom="5dp"
                            android:textColor="#6f6f6f"
                            android:text="Attaullah Khizar"
                            android:textSize="15sp" />

                        <RatingBar
                            android:id="@+id/short_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_below="@+id/cardview_list_title"
                            android:layout_toRightOf="@+id/cardview_image"
                            android:textColor="#8b8b8b" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img_call"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@drawable/ic_call"/>
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_toRightOf="@+id/img_call"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="02sp"
                            android:src="@drawable/ic_msg"/>

                    </RelativeLayout>

                </LinearLayout>




            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="25sp"
                        android:layout_height="15sp"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menue_llipse"
                       />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PKR 277.0"
                        android:layout_toRightOf="@+id/card"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center"


                    >

                    <com.sygn.xeapp.customview.MyTextView
                        android:id="@+id/cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/edit_text_color"
                        android:text="Cash"/>

                    <com.sygn.xeapp.customview.MyTextView
                        android:id="@+id/time_digit"
                        android:layout_below="@+id/cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:textColor="#6f6f6f"
                        android:textSize="13sp"
                        android:text="Change Method"/>
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_below="@+id/lay3">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/quantum_grey"/>

            </RelativeLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:orientation="horizontal"
                    android:layout_below="@id/lay2"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_weight="1">

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            android:textColor="#D34D4D"

                            android:text="Cancel"/>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:text="Share Ride Details"/>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>