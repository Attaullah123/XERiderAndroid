<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/confirm_popup"

    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:elevation="6dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"

                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/lay0"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="0sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:gravity="center"
                       >

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:text="LEB-18-5842"/>

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/km"
                            android:layout_below="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#6f6f6f"
                            android:textSize="13sp"
                            android:text="Honda City - White"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_gravity="center"

                        >

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/confirm_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textSize="16sp"
                            android:textColor="@color/color_black"
                            />

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/time_digit"
                            android:layout_below="@+id/confirm_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:textColor="#6f6f6f"
                            android:textSize="13sp"
                            android:text="Share my ride"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/lay0">

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginRight="120sp"
                        android:layout_marginLeft="120sp"
                        android:layout_height="1dp"
                        android:background="@color/quantum_grey"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lay2"
                    android:id="@+id/lay1"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cardview_image"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pro_img" />

                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/cardview_list_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_toRightOf="@+id/cardview_image"
                            android:paddingBottom="5dp"
                            android:textColor="#6f6f6f"
                            android:text="Attaullah Khizar"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/star"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@drawable/star"
                            android:gravity="center"
                            android:layout_below="@+id/cardview_list_title"
                            android:layout_toRightOf="@+id/cardview_image"
                         />
                        <com.sygn.xeapp.customview.MyTextView
                            android:id="@+id/txt_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/star"
                            android:layout_below="@+id/cardview_list_title"
                            android:text="8.5/10"/>

                        <com.sygn.xeapp.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/txt_rating"
                            android:layout_below="@+id/cardview_list_title"
                            android:text="(1452)"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img_call"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@drawable/ic_call"/>
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_toRightOf="@+id/img_call"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="02sp"
                            android:src="@drawable/ic_msg"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>