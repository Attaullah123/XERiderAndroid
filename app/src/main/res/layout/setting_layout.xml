<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_backround"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_setting"
        layout="@layout/toolbar_other_screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#4278af"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:padding="15dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_user"
            android:src="@drawable/ic_user"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textColor="#696969"
                android:id="@+id/name"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_name"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="2dp"
                android:text="Attaullah Khizar"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="15dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_mobile"
            android:src="@drawable/ic_smart_phone"
            android:layout_width="25dp"
            android:layout_height="35dp" />

        <RelativeLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textColor="#696969"
                android:id="@+id/mobile"
                android:text="Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_mobile"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="2dp"
                android:text="03421629398"
                android:layout_below="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

<!--//email-->
    <LinearLayout
        android:padding="15dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_email"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mail"/>

        <RelativeLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textColor="#696969"
                android:id="@+id/email"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_email"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="2dp"
                android:text="attaa.779@gmail.com"
                android:layout_below="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

            <LinearLayout
                android:padding="15dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_date_birth"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_calendar"/>

                <RelativeLayout
                    android:layout_marginLeft="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#696969"
                        android:id="@+id/date"
                        android:text="Date of Birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/user_date_birth"
                        android:textSize="14sp"
                        android:textColor="#808080"
                        android:layout_marginTop="2dp"
                        android:text="11/03/1993"
                        android:layout_below="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
            android:padding="15dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_gender"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_gender"/>

            <RelativeLayout
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textColor="#696969"
                    android:id="@+id/gender"
                    android:text="Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/user_gender"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginTop="2dp"
                    android:text="Male"
                    android:layout_below="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:padding="15dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_language"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_earth"/>

                <RelativeLayout
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#696969"
                        android:id="@+id/language"
                        android:text="Language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/user_language"
                        android:textSize="14sp"
                        android:textColor="#808080"
                        android:layout_marginTop="2dp"
                        android:text="English"
                        android:layout_below="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/save_contact"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_contact"
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_business"/>

                <RelativeLayout
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="#696969"
                        android:id="@+id/contact"
                        android:text="Safe Contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/user_contact"
                        android:textSize="14sp"
                        android:textColor="#808080"
                        android:layout_marginTop="2dp"
                        android:text="0342168521, 0325454845"
                        android:layout_below="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>