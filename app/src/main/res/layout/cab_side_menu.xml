<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/navigation_view"
    android:fitsSystemWindows="true"
    app:elevation="4dp"
    android:background="@color/white"
    android:layout_marginRight="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/navigation_shadow"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nav_profile" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <com.sygn.xeapp.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="Attaullah"
                            android:textColor="#555d7a" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:background="#555d7a" />

                        <com.sygn.xeapp.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Khizar"

                            android:textColor="#555d7a" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lahore, Pakistan"
                        android:textColor="#8e9dbb" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/your_ride"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu_car"
                        />

                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR RIDES"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notification"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu_bell"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTIFICATIONS"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"

                        android:layout_width="33dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menue_llipse"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYMENT"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/packages"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_reward"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XE-RIDE PACKAGES"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HELP"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="24dp"

                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/menu_setting"
                        android:layout_gravity="center"
                        />

                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SETTINGS"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wallet"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:src="@drawable/menu_wallet"
                        android:layout_gravity="center"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WALLET"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/signout"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_width="30dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu_logout"
                        />
                    <com.sygn.xeapp.customview.MyTextView
                        android:layout_marginLeft="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN OUT"
                        android:textColor="#5c5c5c"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>

